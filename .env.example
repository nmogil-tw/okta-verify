# Root Environment Variables
# Copy this file to .env and fill in your values

# Backend Environment Variables (also copy to backend/.env)
PORT=3001
NODE_ENV=development

# Okta Configuration
OKTA_ORG_URL=https://dev-xxxxx.okta.com
OKTA_CLIENT_ID=0oaxxxxxxxxxxxxx
OKTA_CLIENT_SECRET=xxxxxxxxxxxxx

# Twilio Configuration (for reference/validation)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxx
TWILIO_VERIFY_SERVICE_SID=VAxxxxxxxxxxxxx

# CORS
ALLOWED_ORIGINS=http://localhost:5173

# Logging
LOG_LEVEL=info

# Demo Webhook Secret (for authenticating Function webhook calls)
DEMO_SECRET=your-secure-secret-here

# Frontend Environment Variables (also copy to frontend/.env)
VITE_BACKEND_URL=http://localhost:3001
VITE_OKTA_ORG_URL=https://dev-xxxxx.okta.com
VITE_OKTA_CLIENT_ID=0oaxxxxxxxxxxxxx
VITE_OKTA_REDIRECT_URI=http://localhost:5173/callback

# Twilio Functions Environment Variables (Add to your deployed Functions)
# DEMO_WEBHOOK_URL=http://localhost:3001/api/events/capture
# Or use ngrok URL for remote testing: https://xxxx.ngrok.io/api/events/capture
# DEMO_SECRET=your-secure-secret-here
